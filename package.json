{
  "name": "@graffiti-garden/implementation-decentralized",
  "version": "0.0.1",
  "description": "A client for a decentralized implementation of the Graffiti API",
  "types": "./dist/src/index.d.ts",
  "module": "./dist/index.mjs",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./tests": {
      "import": {
        "types": "./dist/tests/index.d.ts",
        "default": "./dist/tests.mjs"
      }
    }
  },
  "files": [
    "src",
    "dist",
    "tests",
    "package.json",
    "README.md"
  ],
  "author": "Theia Henderson",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "test": "NODE_TLS_REJECT_UNAUTHORIZED=0 vitest",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build:js": "tsx esbuild.config.mts",
    "build": "rm -rf dist && rm -rf docs && npm run build:types && npm run build:js && npm run build:docs",
    "build:docs": "typedoc --options typedoc.json",
    "prepublishOnly": "npm update && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graffiti-garden/implementation-decentralized.git"
  },
  "bugs": {
    "url": "https://github.com/graffiti-garden/implementation-decentralized/issues"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@graffiti-garden/api": "^1.0.8",
    "@ipld/dag-cbor": "^9.2.5",
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1",
    "did-resolver": "^4.1.0",
    "idb": "^8.0.3",
    "openid-client": "^6.8.1",
    "plc-did-resolver": "^1.0.0",
    "web-did-resolver": "^2.0.32",
    "zod": "^4.3.5"
  }
}

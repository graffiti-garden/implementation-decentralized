{
  "name": "@graffiti-garden/implementation-decentralized",
  "version": "0.0.3",
  "description": "A client for a decentralized implementation of the Graffiti API",
  "types": "./dist/index.d.ts",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "browser": "./dist/browser/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "dist",
    "package.json",
    "LICENSE"
  ],
  "author": "Theia Henderson",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "test": "NODE_TLS_REJECT_UNAUTHORIZED=0 vitest run",
    "test:watch": "NODE_TLS_REJECT_UNAUTHORIZED=0 vitest --watch",
    "test:coverage": "NODE_TLS_REJECT_UNAUTHORIZED=0 vitest --coverage",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build:js": "tsx esbuild.config.mts",
    "build": "rm -rf dist && npm run build:types && npm run build:js",
    "prepublishOnly": "npm update && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graffiti-garden/implementation-decentralized.git"
  },
  "bugs": {
    "url": "https://github.com/graffiti-garden/implementation-decentralized/issues"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@graffiti-garden/api": "^1.2.0",
    "@graffiti-garden/modal": "^1.0.3",
    "@ipld/dag-cbor": "^9.2.5",
    "@noble/ed25519": "^3.0.0",
    "@noble/hashes": "^2.0.1",
    "did-resolver": "^4.1.0",
    "idb": "^8.0.3",
    "openid-client": "^6.8.1",
    "plc-did-resolver": "^1.0.0",
    "web-did-resolver": "^2.0.32",
    "zod": "^4.3.5"
  }
}
